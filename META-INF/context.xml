<?xml version="1.0" encoding="UTF-8"?>

<Context path="/ctu"
         docBase="ctu"
         reloadable="false"
         crossContext="true">
    <Resource name="jdbc/ctu"
              auth="Container"
              type="javax.sql.DataSource"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              initialSize="10"
              maxActive="15"
              maxIdle="10"
              maxWait="18"
              username="root"
              password=""
              driverClassName="com.mysql.jdbc.Driver"
              validationQuery="/* ping */ SELECT 1"
              removeAbandoned="true"
              removeAbandonedTimeout="300"
              testOnBorrow="true"
              logAbandoned="true"
              abandonWhenPercentageFull="50"
              url="jdbc:mysql://127.0.0.1:3306?useCursorFetch=true&amp;defaultFetchSize=1000&amp;dumpQueriesOnException=true&amp;useUnicode=true&amp;characterEncoding=UTF-8"/>
</Context>
